generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String        @id @default(uuid())
  name        String
  searchName  String?
  slug        String        @unique
  price       Int
  oldPrice    Int?
  category    Category
  color       String
  sku         String        @unique
  description String?
  images      String[]
  sizeStock   SizeStock[]
  featured    Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([category])
  @@index([sku])
  @@index([searchName])
}

model SizeStock {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  size      Int
  stock     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, size])
  @@index([productId])
}

enum Category {
  HIGHBOOTS
  BOOTS
  SANDALS
}