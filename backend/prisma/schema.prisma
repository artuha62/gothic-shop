generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  role      String   @default("user")

  otpCode      String?
  otpExpiresAt DateTime?

  refreshToken String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
}

model Product {
  id          String        @id @default(uuid())
  name        String
  searchName  String?
  slug        String        @unique
  price       Int
  oldPrice    Int?
  category    Category
  color       String
  sku         String        @unique
  description String?
  images      String[]
  sizeStock   SizeStock[]
  featured    Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([category])
  @@index([sku])
  @@index([searchName])
}

model SizeStock {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  size      Int
  stock     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, size])
  @@index([productId])
}

enum Category {
  HIGHBOOTS
  BOOTS
  SANDALS
}

model Order {
  id        String      @id @default(uuid())
  orderNumber Int      @unique @default(autoincrement())

  // Customer info
  firstName    String
  lastName     String
  email        String
  phone        String
  address      String
  apartment    String?
  comment      String?

  // Order details
  status       OrderStatus @default(PENDING)
  subtotal     Int
  discount     Int         @default(0)
  discountCode String?
  deliveryCost Int
  total        Int

  // Relations
  items        OrderItem[]

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([email])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Product snapshot
  productId   String
  productName String
  productSlug String
  size        Int
  quantity    Int
  price       Int     // цена за единицу на момент заказа

  createdAt DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}